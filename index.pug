body
  header.header
    .header__logo
      img.logo(src="https://demo.patternlab.io/images/logo.svg")
    .header__menu
      .menu
        ul.menu__list
          each val in ['About', 'Blog', 'Contact', 'Login']
            li.menu__item 
              a.menu__link(href='#')= val
    .header__search
      form.search
        input.search-inner(type="text" placeholder="Search in site")
  .container
    a.container__banner
      .banner
        img.banner__slogan(src="https://demo.patternlab.io/images/sample/hero-forest.jpg")
        h2.banner__headline Track your hikes. Challenge your friends. Get out there and start exploring.
    .container__content
      .content
        .content__tout
           .tout
              ul.tout__list
                -
                  var toutList = [
                    {
                      image: "https://demo.patternlab.io/images/sample/tout-winter-hiker.jpg",
                      title: "Best winter hikes around the world"
                    },
                    {
                      image: "https://demo.patternlab.io/images/sample/tout-leaves.jpg",
                      title: "Sign in to view your dashboard"
                    },
                    {
                      image: "https://demo.patternlab.io/images/sample/tout-mountains.jpg",
                      title: "Learn about our mission"
                    }
                  ]
                each item in toutList
                  li.tout__post
                    a.tout__link(href='#')
                      img.tout__image(src= item.image)
                      h2.tout__headline= item.title
        .content__two-col
          .content__blog
            .blog
              h2.blog__section-title Latest From the Blog
              ul.blog__list
                -
                  var blogList = [
                    {
                      image: "https://demo.patternlab.io/images/sample/blog-mtns3.jpg",
                      title: "Hardest Hikes in the World",
                      excerpt: "The world delivers a multitude of daunting hikes. How difficult? We have listed some of the most strenuous hikes in the world."
                    },
                    {
                      image: "https://demo.patternlab.io/images/sample/blog-trees.jpg",
                      title: "How to Survive in the Woods",
                      excerpt: "Picture yourself alone in the wilderness with only a backpack full of your belongings for 2 weeks. Here are some tips and suggestions on how to survive the hazards that Mother Nature has to offer."
                    },
                    {
                      image: "https://demo.patternlab.io/images/sample/blog-mtns2.jpg",
                      title: "Top 10 Best Locations to Hike in the U.S.",
                      excerpt: "You do not have to travel far to explore what nature has to offer. The U.S. contains some of the best sights in the world and we have listed the 10 best for you."
                    }
                  ]
                each blog in blogList
                  li.blog__item
                    a.blog__item-link(href='#')
                      img.blog__item-image(src= blog.image)
                      .blog__item-body
                        h2.blog__item-title= blog.title
                        p.blog__item-excerpt= blog.excerpt
              a.blog__view-more(href='#') View All Posts
          .content__hiker
            .hiker
              h2.hiker__section-title Featured Hikers
              ul.hiker__list
                -
                  var hikerList = [
                    {
                      image: "https://demo.patternlab.io/images/sample/avatar1.jpg",
                      name: "Jimmy Stewart",
                      address: "Indiana, PA"
                    },
                    {
                      image: "https://demo.patternlab.io/images/sample/avatar2.jpg",
                      name: "Janice Kimble",
                      address: "Los Angeles, CA"
                    },
                    {
                      image: "https://demo.patternlab.io/images/sample/avatar3.jpg",
                      name: "Salvadore Dali XIV",
                      address: "Sheboygan, WI"
                    }
                  ]
                each hiker in hikerList
                  li.hiker__item 
                    a.hiker__item-link(href='#')
                      img.hiker__item-avatar(src= hiker.image)
                      .hiker__item-body
                        h2.hiker__item-name= hiker.name
                        p.hiker__item-address= hiker.address
                a.hiker__view-more(href='#') View All Hikers
  footer
    .footer
      a.footer__logo(href='#')
        img.logo(src='https://demo.patternlab.io/images/logo-footer.svg')
      nav.footer__navigation
        .navigation
          ul.navigation__list
            each val in ['About', 'Blog', 'Contact', 'Login']
              li.navigation__item
                a.navigation__link(href='#')= val
      p.footer__info  This is a demonstration of what's possible with
        -
          var footerInfo = [
            {
              link: "http://patternlab.io",
              text: "Pattern Lab",
              suffix: ". "
            },
            {
              link: "http://patternlab.io/download.html",
              text: "Download Pattern Lab",
              suffix: ", check out the "
            },
            {
              link: "http://patternlab.io/docs/",
              text: "documentation",
              suffix: ", or learn more about "
            },
            {
              link: "http://atomicdesign.bradfrost.com/",
              text: "atomic design",
              suffix: "."
            }
          ]
        each item in footerInfo
          a(href= item.link)= item.text
          = item.suffix
